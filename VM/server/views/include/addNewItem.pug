.row
    .col-md-12
        form(method='POST' action='/add-item')#add-item-form
            .control-group
                label(for='barcode') Barcode:
                .row
                    .col-md-2
                        input#barcode.form-control(type='text' placeholder='Manual input for now' name='barcode')
                    .col-md-2
                        button#search-barcode.btn.btn-primary(type="button") Search Barcode
            .control-group
                label(for='itemName') Item name:
                input#itemName.form-control(type='text', placeholder='Item Name' name='itemName')
            .control-group
                label(for='location') Location:
                input#location.form-control(type='text', value=postcode name='location')
            .control-group
                label(for='expiry') Expiry date:
                input#expiry.form-control(type='date' name='expiry')
            .control-group
                label(for='prefTimes') Preferred pick-up time:
                select#prefTimes.form-control(name='prefTimes')
                    option(value='morning') Morning
                    option(value='afternoon') Afternoon
                    option(value='Evening') Evening
            .control-group
                label(for='description') Description:
                input#description.form-control(type='text', placeholder='Description' name='description')
            .control-group
                label(for='img') Image:
                input#pictureUpload.form-control(type='file' name="img")
            button.btn.btn-primary(type='submit') List item

