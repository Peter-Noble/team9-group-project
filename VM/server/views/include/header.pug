.navbar.navbar-static-top.navbar-header
    .navbar-inner
        .nav
            .row
                .col-sm-3
                    if authenticated
                        a(href="/auth/home")
                            img.logo(src="/styles/assets/Logo50.png")
                    else
                        a(href="/index")
                            img.logo(src="/styles/assets/Logo50.png")
                .col-sm-6
                    h1 Give & Go
                .col-sm-3
                    .collapse.navbar-collapse
                        button.navbar-toggle(type="button" data-toggle="collapse" data-target="#myNavbar")
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        #myNavBar
                            ul.nav.navbar-nav.navbar-right
                                if authenticated
                                    li
                                        a(href="/auth/add-item")
                                            span.glyphicon.glyphicon-plus.header
                                            |  Add item
                                    li
                                        a(href="/auth/profile")
                                            span.glyphicon.glyphicon-user.header
                                            |  Profile 
                                else
                                    li
                                        a(href="/registration")
                                            span.glyphicon.glyphicon-user
                                            Register
                                    li
                                        a(href="/login")
                                            span.glyphicon.glyphicon-log-in
                                            Login 
                    
                        
            .row
                .col-sm-12
                    #headerSearch
                        form(method="GET" action="/search-results")#custom-search-input
                            .input-group
                                input#searchtext(type="text" class="form-control input-lg" placeholder="Search" name="searchtext")
                                input#sortBy(type="hidden" class="form-control" name="sortBy" value="dateDSC")
                                span(class="input-group-btn")
                                    button(class="btn btn-info btn-lg" type="submit")
                                        i(class="glyphicon glyphicon-search")
