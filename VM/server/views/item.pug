extends include/layout

block content
    if item
        .row
            .col-md-10
                h1= item.Title
                p= prettyDate(item.Expiry)
            .col-md-2
                if ownItem
                    button(class="btn btn-info btn-lg" type="button") Edit
                else if authenticated
                    button(class="btn btn-info btn-lg" type="button") Claim
                else

                    button(class="btn btn-info btn-lg" type="button") Claim

        .row
            .col-md-8
                h2 Description
                p Description of item
                p list of tags
            .col-md-4
                h3 Image goes here

        if ownItem
            .row
                .col-md-6
                    h3 collection offers
                .col-md-6
                    h3 private messages relating to this item
    else

        .row
            .col-md-12
                p No item with this id
